unit uTprincipal;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, InvokeRegistry, Rio, SOAPHTTPClient;

type
  TForm1 = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    edtValorA: TEdit;
    edtValorB: TEdit;
    btnCalcular: TButton;
    Label3: TLabel;
    HTTPRIOSOMA: THTTPRIO;
    procedure btnCalcularClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

uses
  IInterface1;

{$R *.dfm}

procedure TForm1.btnCalcularClick(Sender: TObject);
var
  resultado : Integer;
begin
  Label3.Caption := '';
  resultado := (HTTPRIOSOMA as IInterface).Soma(StrToInt(edtValorA.Text),
                                                StrToInt(edtValorB.Text));
  Label3.Caption := Label3.Caption + ' '  + IntToStr(resultado);
end;

end.
