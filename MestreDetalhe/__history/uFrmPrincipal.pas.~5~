unit uFrmPrincipal;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, DB, DBClient, StdCtrls, Grids, DBGrids, ComCtrls;

type
  TForm1 = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    edtCodigo: TEdit;
    edtValorTotal: TEdit;
    DateTimePicker1: TDateTimePicker;
    DBGrid1: TDBGrid;
    btnIncluir: TButton;
    btnAlterar: TButton;
    btnExcluir: TButton;
    CD: TClientDataSet;
    DS: TDataSource;
    CDCodigo: TIntegerField;
    CDData: TDateField;
    CDValorTotal: TCurrencyField;
    procedure btnIncluirClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.btnIncluirClick(Sender: TObject);
begin
  CD.Append;
  CD.FieldByName('CDCodigo').AsInteger := StrToInt(edtCodigo.Text);
  CD.Post;
  CD.ApplyUpdates(0);

end;

end.
