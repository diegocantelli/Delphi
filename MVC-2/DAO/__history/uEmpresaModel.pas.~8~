unit uEmpresaModel;

interface

uses
  SysUtils;

type
  TEmpresaModel = class
    private
    FCodigo: Integer;
    FRSocial: string;
    procedure SetCodigo(const Value: Integer);
    procedure SetRSocial(const Value: string);
    public
      constructor Create(ACodigo:Integer);
      property Codigo: Integer read FCodigo write SetCodigo;
      property RSocial:string read FRSocial write SetRSocial;
      procedure Carregar;
  end;
implementation

uses
  uEmpresaDAO;
{ TEmpresa }

procedure TEmpresaModel.Carregar;
var
  VEmpresaDAO : TEmpresaDAO;
begin
  try
    VEmpresaDAO := TEmpresaDAO.Create;
    VEmpresaDAO.Carregar(self);
  finally
    FreeAndNil(VEmpresaDAO);
  end;

end;

constructor TEmpresaModel.Create(ACodigo: Integer);
begin
  FCodigo := ACodigo;
end;

procedure TEmpresaModel.SetCodigo(const Value: Integer);
begin
  FCodigo := Value;
end;

procedure TEmpresaModel.SetRSocial(const Value: string);
begin
  FRSocial := Value;
end;

end.
